@model User
<style>
    .form-group {
        border-radius: 4px;
    }
    .error {
        color: red;
    }
    #register{
        display:inline-block;
        vertical-align: top;
        margin-left:25%;
    }
    #login{
        display:inline-block;
        vertical-align: top;
        margin-left:10%;
    }
</style>


<div id="container">

    <body>
        <!-- //////Registration Form Below -->
        <div id="register">
            <h1>Register</h1>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <h4>First Name: </h4><input type="text" asp-for="FirstName" class="form-group"><span
                    asp-validation-for="FirstName" class="error"></span><br>
                <h4>Last Name: </h4><input type="text" asp-for="LastName" class="form-group"><span
                    asp-validation-for="LastName" class="error"></span><br>
                <h4>Email: </h4><input type="email" asp-for="Email" class="form-group"><span asp-validation-for="Email"
                    class="error"></span><br>
                <h4>Password: </h4><input type="password" asp-for="Password" class="form-group"><span
                    asp-validation-for="Password" class="error"></span><br>
                <h4>Confirm Password: </h4><input type="password" asp-for="Confirm" class="form-group"><span
                    asp-validation-for="Confirm" class="error"></span><br>
                <input type="submit" value="Register">
            </form>
        </div>

        <div id="login">
            <partial name="Login"/>
        </div>

    </body>
</div>

</html>